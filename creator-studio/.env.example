# ==============================================
# Creator Studio Environment Configuration
# ==============================================

# Application Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/creator_studio"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Redis (for sessions and job queues)
REDIS_URL="redis://localhost:6379"

# S3/MinIO Configuration (for video storage)
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="creator-studio-videos"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"
S3_FORCE_PATH_STYLE="true"

# SMTP Configuration (for emails)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@hingetrade.com"

# External APIs (Production)
# OPENAI_API_KEY="sk-..."
# WHISPER_API_KEY="sk-..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Feature Flags
NEXT_PUBLIC_ENABLE_VIDEO_RECORDING="true"
NEXT_PUBLIC_ENABLE_AI_PROCESSING="true"
NEXT_PUBLIC_ENABLE_MONETIZATION="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"

# Development Settings
NEXT_PUBLIC_MOCK_AI_RESPONSES="true"
NEXT_PUBLIC_MOCK_PAYMENT_PROCESSING="true"

# Logging
LOG_LEVEL="info"
PINO_LOG_LEVEL="info"

# Security
WEBHOOK_SECRET="your-webhook-secret-here"